{
  "name": "PandaScope",
  "description": "Check your HTTP requests",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/scope_16.png",
    "128": "icons/scope_128.png"
  },
  "background": {
      "service_worker": "./scripts/background.js"
  },
  "action": {
      "default_popup": "./popup/window.html",
      "default_icons": {
        "16": "icons/scope_16.png",
        "128": "icons/scope_128.png"
      }
  },
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
      "<all_urls>"
  ]
}
